## riscontrato errore!! Errore in grDevices::rgb(RGB[, 1], RGB[, 2], RGB[, 3], alpha = alpha, maxColorValue = scale) : 
##  intensitÃ  colore 7243, non in 0:255

# devo ridimensionare, guardo il range delle bande:
print(gc06)
# o piÃ¹ in dettaglio:
cellStats(gc06, min)
cellStats(gc06, max)
# If you know the maximum and 0 is the minimum then this would be enough:
# plotRGB(gc06, r=3, g=2, d=1, scale = [max])  #MEGLIO COSI

setValues(m[[1]], scales::rescale(values(m[[1]]), to = c(0, 255)))  
setValues(m[[2]], scales::rescale(values(m[[1]]), to = c(0, 255)))  
setValues(m[[3]], scales::rescale(values(m[[1]]), to = c(0, 255)))  
setValues(m[[4]], scales::rescale(values(m[[1]]), to = c(0, 255)))  

plotRGB(gc06, r=3, g=2, b=1, scale = 65535)  
plotRGB(gc22, r=3, g=2, b=1, scale = 65535)  

plotRGB(gc06, r=4, g=3, b=1, scale = 65535)  
plotRGB(gc22, r=4, g=3, b=1, scale = 65535)

