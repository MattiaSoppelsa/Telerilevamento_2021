## CASO MALAWI ##
library(raster)
library(rgdal)

setwd("D:/lab/malawi/")
rastlist <- list.files(path = "D:/lab/malawi/", pattern='.TIF$', all.files=TRUE, full.names=FALSE)
m <- lapply(rastlist, raster)
m

ndvi12 <- (m[[8]] - m[[7]])/(m[[8]] + m[[7]])
ndvi13 <- (m[[2]] - m[[1]])/(m[[2]] + m[[1]])
ndvi14 <- (m[[4]] - m[[3]])/(m[[4]] + m[[3]])
ndvi15 <- (m[[6]] - m[[5]])/(m[[6]] + m[[5]])

cl <- colorRampPalette(c("blue","transparent","green"))(100)
par(mfrow=c(2,2))
plot(ndvi12, col=cl,main = "MALAWI 2012", axes = FALSE, box = FALSE)
plot(ndvi13, col=cl,main = "MALAWI 2013", axes = FALSE, box = FALSE)
plot(ndvi14, col=cl,main = "MALAWI 2014", axes = FALSE, box = FALSE)
plot(ndvi15, col=cl,main = "MALAWI 2015", axes = FALSE, box = FALSE)

par(mfrow=c(2,2))
hist(ndvi12, main = "MALAWI 2012", col = "springgreen", xlab = "NDVI Index Value")
hist(ndvi13, main = "MALAWI 2013", col = "springgreen", xlab = "NDVI Index Value")
hist(ndvi14, main = "MALAWI 2014", col = "springgreen", xlab = "NDVI Index Value")
hist(ndvi15, main = "MALAWI 2015", col = "springgreen", xlab = "NDVI Index Value")

