##### 2. RAPPRESENTAZIONE AREA DI STUDIO TRAMITE RGB  #####

ggr87 <- ggRGB(asc87_crop, 3, 2, 1, stretch="Lin") + ggtitle("Anno 1987") + theme(axis.title.x = element_blank(), axis.title.y = element_blank())
ggr92 <- ggRGB(asc92_crop, 3, 2, 1, stretch="Lin") + ggtitle("Anno 1987") + theme(axis.title.x = element_blank(), axis.title.y = element_blank())
ggr97 <- ggRGB(asc97_crop, 3, 2, 1, stretch="Lin") + ggtitle("Anno 1987") + theme(axis.title.x = element_blank(), axis.title.y = element_blank())
ggr02 <- ggRGB(asc02_crop, 3, 2, 1, stretch="Lin") + ggtitle("Anno 1987") + theme(axis.title.x = element_blank(), axis.title.y = element_blank())
ggr11 <- ggRGB(asc11_crop, 3, 2, 1, stretch="Lin") + ggtitle("Anno 1987") + theme(axis.title.x = element_blank(), axis.title.y = element_blank())
ggr21 <- ggRGB(asc21_crop, 3, 2, 1, stretch="Lin") + ggtitle("Anno 1987") + theme(axis.title.x = element_blank(), axis.title.y = element_blank())

# Utilizzo la funzione grid.arrange per visualizzarli assieme 
cr <- grid.arrange(ggr87, ggr92, ggr97, ggr02, ggr11, ggr21, nrow=1)   #forse basta anche la funzione top="top label"
ggsave("D:/lab/asc/imm/cr.png", cr)



# Utilizzo la funzione aggregate per ridurre il numero di pixels di un fattore 10, risoluzione da (30x30) -> (300x300)
asc87_res <- aggregate(asc87_crop, fact=10) 
asc92_res <- aggregate(asc92_crop, fact=10) 
asc97_res <- aggregate(asc97_crop, fact=10) 
asc02_res <- aggregate(asc02_crop, fact=10) 
asc11_res <- aggregate(asc11_crop, fact=10) 
asc21_res <- aggregate(asc21_crop, fact=10) 


# Preparo le immagini aggiungendo il titolo e rimuovendo le assi, inoltre assegno un nome alla funzione ggRGB cosi da poterla richiamare con grid.arrange
