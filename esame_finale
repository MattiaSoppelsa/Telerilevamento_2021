# 0 Lista bande utilizzate

# Landsat 4/5 spectral bands:  
# nBanda = freqq    -->   Posizione nell'immagine        
# Band 1 = Blue     -->                     [[1]]
# Band 2 = Green    -->                     [[2]] 
# Band 3 = Red      -->                     [[3]]   
# Band 4 = NIR     -->                      [[4]]                  ###   per semplicitÃ  ho rimosso la banda Coastal dalle immagini di Landsat 8   ###
# Band 5 = SWIR-1  -->                      [[5]]                    ##     e rinominato le bande di landsat 8 scalandole di una posizione      ##
# Band 6 = Thermal infrared   --> removed
# Band 7 = SWIR-2  -->  B7  [[6]]

# Landsat 8 spectral bands:
# Band 1 = Coastal / Aerosol  --> removed
# Band 2 = Blue         B1                  [[1]]
# Band 3 = Green        B2                  [[2]]
# Band 4 = Red          B3                  [[3]]
# Band 5 = NIR          B4                  [[4]]
# Band 6 = SWIR-1       B5                  [[5]]
# Band 7 = SWIR-2       B7                  [[6]]


library(raster) 
library(rasterVis)
library(rgdal) 
library(ggplot2) 
library(RStoolbox)
library(gridExtra)  
library(grid)

#Richiamo la mia directory
setwd("D:/lab/asc")

